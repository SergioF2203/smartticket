<Window x:Class="Client.SelectTrip"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="SelectTrip" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="184*"></ColumnDefinition>
            <ColumnDefinition Width="415*"></ColumnDefinition>
            <ColumnDefinition Width="193*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <DatePicker Grid.Column="0" x:Name="dateTrip" HorizontalAlignment="Left" Margin="33,30,0,0" VerticalAlignment="Top" Text="adddd" SelectedDateChanged="DateTrip_SelectedDateChanged" FirstDayOfWeek="Monday" Height="24" Width="102"/>
        <ListView Grid.Column="1" HorizontalAlignment="Left" Height="405" Margin="5,5,0,0" VerticalAlignment="Top" Width="405" ItemsSource="{Binding Trips}" SelectedItem="{Binding Path=SelectedTrip}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="50" Header="Date" DisplayMemberBinding="{Binding Date}"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
