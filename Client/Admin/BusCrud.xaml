<Window x:Class="Client.Admin.BusCrud"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Admin"
        mc:Ignorable="d"
        Title="BusCrud" Height="200" Width="400" WindowStyle="None">
    <Grid>
        <StackPanel>
        <Button Content="Add" Height="50" Name="AddButton" BorderBrush="gray" Click="AddButton_Click" Background="Pink" Foreground="Gray"></Button>
        <Button Content="Delete" Height="50" Name="DeleteButton"  BorderBrush="gray" Background="Pink" Foreground="Gray"></Button>
        <Button Content="Edit"  Height="50" Name="EditButton"  BorderBrush="gray" Background="Pink" Foreground="Gray"></Button>
        <Button Content="Exit"  Height="50" Name="ExitButton"  BorderBrush="gray" Background="Pink" Foreground="Gray" Click="ExitButton_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
