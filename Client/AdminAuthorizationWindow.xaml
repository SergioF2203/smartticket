<Window x:Class="Client.AdminAuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Admin Panel" Height="150" Width="250" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox Name="LoginTextbox" VerticalAlignment="Top" Height="30" />
        <PasswordBox Name="PasswordTextBox" VerticalAlignment="Center" Height="30"  />
        <Button Name="CancelButton" Content="Cancel" VerticalAlignment="Bottom" HorizontalAlignment="Left" Height="30" Width="100" Click="CancelButton_Click"/>
        <Button Name="ApplyButton" Content="Aply" VerticalAlignment="Bottom" HorizontalAlignment="Right" Height="30" Width="100" Click="ApplyButton_Click"/>
    </Grid>
</Window>
