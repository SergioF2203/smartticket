        <StackPanel Grid.Row="1">
            <Button Width="78" Content="NEXT" RenderTransformOrigin="2.907,0.966" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,9,20,0" FontFamily="Calibri" FontSize="10" Height="29" Click="Button_Click"/>
