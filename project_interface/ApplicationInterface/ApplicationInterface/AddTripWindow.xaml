<Window x:Class="ApplicationInterface.AddTripWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApplicationInterface"
        mc:Ignorable="d"
        Title="AddTripWindow" Height="150" Width="350" ResizeMode="NoResize">
    <Grid>
        <ComboBox Name="FromWhereComboBox" Height="30" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,5,0,0"/>
        <ComboBox Name="WhereComboBox" Height="30" Width="100" HorizontalAlignment="Center"  VerticalAlignment="Top" Margin="0,5,0,0"/>
        <ComboBox Name="DateComboBox" Height="30" Width="100" HorizontalAlignment="Right"  VerticalAlignment="Top" Margin="0,5,5,0"/>
        <Button Name="CancelButton" Height="30" Width="150" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="5,0,0,5" Content="Cancel" Click="CancelButton_Click"/>
        <Button Name="OkButton" Height="30" Width="150" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="5,0,5,5" Content="Ok"/>
    </Grid>
</Window>
