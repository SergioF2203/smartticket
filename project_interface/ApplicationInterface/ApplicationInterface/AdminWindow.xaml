<Window x:Class="ApplicationInterface.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApplicationInterface"
        mc:Ignorable="d"
        Title="Edit Travel Scheme" Height="200" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Button Name="AddTripButton" Content="Add Trip" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,0" Height="40" Width="280" Click="AddTripButton_Click"></Button>
        <Button Name="DeleteTripButton" Content="Delete Trip" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,0" Height="40" Width="280"></Button>
        <Button Name="EditTripButton" Content="Edit Trip" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,10" Height="40" Width="280"></Button>
    </Grid>
</Window>
