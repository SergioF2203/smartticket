<Window x:Class="ApplicationInterface.AdminAuthoriяationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApplicationInterface"
        mc:Ignorable="d"
        Title="Authorization" Height="170" Width="200">
    <Grid>
        <TextBox Name="LoginTextBox" Height="30" Margin="0,10,0,0"  Text="Login" VerticalAlignment="Top" HorizontalAlignment="Center" Width="180"/>
        <TextBox Name="PasswordTextBox" Height="30" Margin="0,0,0,10" Text="Password" VerticalAlignment="Center" Width="180" HorizontalAlignment="Center"/>
        <Button Height="30" Margin="0,0,0,10" Content="Login" VerticalAlignment="Bottom" Width="180" HorizontalAlignment="Center" Click="Button_Click"/>
    </Grid>
</Window>
